generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

model Produto {
  id         Int     @id @default(autoincrement())
  nome       String
  descricao  String? 
  preco      Decimal @db.Decimal(10, 2)

  @@map("produto")
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nome      String
  cargo     String
  telefone  String?
  foto      String?
  user      String    @unique     // login Ãºnico
  senha     String                 // armazenada com hash (bcrypt)
  isAdmin   Boolean   @default(false)


  @@map("usuario")
}